<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.just.news.R" />

        <variable
            name="vm"
            type="com.just.machine.ui.viewmodel.MainViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cardiopulmonary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cardiopulmonary" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_minute_walk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/minute_walk" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_patient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/patient_information" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>