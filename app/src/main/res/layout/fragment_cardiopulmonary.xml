<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.just.news.R" />

        <variable
            name="vm"
            type="com.just.machine.ui.viewmodel.MainViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cF5FCFF"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/view_toolbar"
            setTitleImage="@{R.drawable.back}" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#ffffff"
            tools:ignore="NestedWeights">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="便携式心肺功能测试系统"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="15dp"
                        android:layout_marginStart="10dp"
                        android:background="@color/text3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="测试系统"
                        android:textColor="@color/text3"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <ImageView
                    android:id="@+id/iv_preheat_device_connect_status"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/warn_red" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:text="未连接"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/iv_preheat_status"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/warn_red" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="未预热"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/iv_preheat_device_calibrate_status"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/warn_red" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="未完成定标"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/battery" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_environment"
                    android:layout_width="96dp"
                    android:layout_height="73dp"
                    android:background="@color/white"
                    android:drawableTop="@drawable/ic_calibration"
                    android:padding="@dimen/space_10"
                    android:text="系统定标"
                    android:textSize="@dimen/space_14" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_static"
                    android:layout_width="96dp"
                    android:layout_height="73dp"
                    android:background="@color/white"
                    android:drawableTop="@drawable/ic_dynamic"
                    android:padding="@dimen/space_10"
                    android:text="静态肺测试"
                    android:textSize="@dimen/space_14" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_dynamic"
                    android:layout_width="96dp"
                    android:layout_height="73dp"
                    android:background="@color/white"
                    android:drawableTop="@drawable/ic_dynamic"
                    android:padding="@dimen/space_10"
                    android:text="动态肺测试"
                    android:textSize="@dimen/space_14" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_dynamic_result"
                    android:layout_width="96dp"
                    android:layout_height="73dp"
                    android:background="@color/white"
                    android:drawableTop="@drawable/dynamic_result"
                    android:padding="@dimen/space_10"
                    android:text="运动评估"
                    android:textSize="@dimen/space_14" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_setting"
                    android:layout_width="96dp"
                    android:layout_height="73dp"
                    android:background="@color/white"
                    android:drawableTop="@drawable/ic_setting"
                    android:padding="@dimen/space_10"
                    android:text="系统设置"
                    android:textSize="@dimen/space_14" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_close"
                    android:layout_width="96dp"
                    android:layout_height="73dp"
                    android:background="@color/white"
                    android:drawableTop="@drawable/ic_clos"
                    android:padding="@dimen/space_10"
                    android:text="退出程序"
                    android:textSize="@dimen/space_14" />

            </LinearLayout>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vp_cardiopulmonary"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>
</layout>