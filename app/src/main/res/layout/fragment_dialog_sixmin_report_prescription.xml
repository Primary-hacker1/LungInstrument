<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/sixmin_report_title_topradius_bg"
            android:gravity="center"
            android:text="选择处方参数"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:orientation="horizontal"
                    android:paddingHorizontal="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="运动步速"
                        android:textColor="@color/text3" />

                    <Spinner
                        android:id="@+id/sixmin_report_tv_prescription_stride"
                        android:layout_width="80dp"
                        android:layout_height="22dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/sixmin_report_prescription_bg"
                        android:overlapAnchor="false"
                        android:paddingStart="10dp"
                        android:textColor="#2f89de" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="计算公式"
                            android:textColor="@color/text3" />

                        <TextView
                            android:layout_width="380dp"
                            android:layout_height="22dp"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/sixmin_report_prescription_formula_bg"
                            android:paddingStart="10dp"
                            android:paddingEnd="20dp"
                            android:text="6分钟平均步行速度×（50%~60%）" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingHorizontal="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="推荐距离"
                        android:textColor="@color/text3" />

                    <Spinner
                        android:id="@+id/sixmin_report_tv_prescription_distance"
                        android:layout_width="80dp"
                        android:layout_height="22dp"
                        android:layout_marginStart="30dp"
                        android:background="@drawable/sixmin_report_prescription_bg"
                        android:overlapAnchor="false"
                        android:paddingStart="10dp"
                        android:textColor="#2f89de"
                        android:visibility="invisible" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="计算公式"
                            android:textColor="@color/text3" />

                        <TextView
                            android:layout_width="380dp"
                            android:layout_height="22dp"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/sixmin_report_prescription_formula_bg"
                            android:paddingStart="10dp"
                            android:text="6分钟平均步行速度×（50%~60%）×建议单次运动时长" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="40dp"
                android:layout_height="1.5dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="45dp"
                android:background="@color/text3"
                android:rotation="45" />

            <View
                android:layout_width="40dp"
                android:layout_height="1.5dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="72dp"
                android:background="@color/text3"
                android:rotation="135" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:paddingHorizontal="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运动心率"
                android:textColor="@color/text3" />

            <Spinner
                android:id="@+id/sixmin_report_tv_prescription_heartbeat"
                android:layout_width="80dp"
                android:layout_height="22dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/sixmin_report_prescription_bg"
                android:overlapAnchor="false"
                android:paddingStart="10dp"
                android:textColor="#2f89de" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="invisible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="计算公式"
                    android:textColor="@color/text3" />

                <TextView
                    android:layout_width="380dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/sixmin_report_prescription_formula_bg"
                    android:paddingStart="10dp"
                    android:paddingEnd="20dp"
                    android:text="6分钟平均步行速度×（50%~60%）" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:paddingHorizontal="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="代谢当量"
                android:textColor="@color/text3" />

            <Spinner
                android:id="@+id/sixmin_report_tv_prescription_metab"
                android:layout_width="80dp"
                android:layout_height="22dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/sixmin_report_prescription_bg"
                android:overlapAnchor="false"
                android:paddingStart="10dp"
                android:textColor="#2f89de" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="invisible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="计算公式"
                    android:textColor="@color/text3" />

                <TextView
                    android:layout_width="380dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/sixmin_report_prescription_formula_bg"
                    android:paddingStart="15dp"
                    android:paddingEnd="20dp"
                    android:text="6分钟平均步行速度×（50%~60%）" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:paddingHorizontal="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="borg疲劳"
                android:textColor="@color/text3" />

            <Spinner
                android:id="@+id/sixmin_report_tv_prescription_tired"
                android:layout_width="80dp"
                android:layout_height="22dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/sixmin_report_prescription_bg"
                android:overlapAnchor="false"
                android:paddingStart="10dp"
                android:textColor="#2f89de" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="invisible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="计算公式"
                    android:textColor="@color/text3" />

                <TextView
                    android:layout_width="380dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/sixmin_report_prescription_formula_bg"
                    android:paddingStart="10dp"
                    android:paddingEnd="20dp"
                    android:text="6分钟平均步行速度×（50%~60%）" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sixmin_report_tv_prescription_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sixmin_report_btn_confirm_bg"
                android:paddingHorizontal="50dp"
                android:paddingVertical="10dp"
                android:text="确定"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/sixmin_report_tv_prescription_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/sixmin_report_btn_close_bg"
                android:paddingHorizontal="50dp"
                android:paddingVertical="10dp"
                android:text="关闭"
                android:textColor="@color/colorWhite" />

        </LinearLayout>

    </LinearLayout>
</layout>