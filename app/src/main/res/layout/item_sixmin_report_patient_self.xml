<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/sixmin_report_iv_patient_self"
                    android:layout_width="26dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="2dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/breath" />

                <TextView
                    android:id="@+id/sixmin_report_tv_patient_self_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:ems="1"
                    android:textColor="@color/text3"
                    android:textSize="13sp">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/sixmin_report_rv_patient_self"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false">

                </androidx.recyclerview.widget.RecyclerView>

                <TextView
                    android:id="@+id/sixmin_report_tv_patient_self_conclusion"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/text3"
                    android:textSize="12sp">
                </TextView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>