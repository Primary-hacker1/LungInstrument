<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabLayoutBoldText" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="CustomCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/custom_checkbox_selector</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:layout_marginStart">48dp</item>

    </style>

    <style name="CustomRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radio_button_selector</item>
        <item name="android:paddingStart">8dp</item>
    </style>

    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <!-- 修改 Spinner 下拉箭头颜色为透明 -->
        <item name="android:background">@drawable/spinner_dropdown_background</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:popupBackground">@drawable/spinner_dropdown_background</item>
        <!-- 可选：其他样式修改 -->
    </style>

</resources>
