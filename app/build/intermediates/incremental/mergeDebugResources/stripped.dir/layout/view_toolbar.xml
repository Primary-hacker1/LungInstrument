    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal" android:tag="layout/view_toolbar_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" tools:ignore="MissingDefaultResource">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_title_back"
            android:tag="binding_1"    
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
                              
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/colorWhile"
            android:textSize="16sp"
            android:textStyle="bold"  android:tag="binding_2"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_right"
            android:tag="binding_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:textColor="@color/colorWhile"
            android:textSize="16sp"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>
         