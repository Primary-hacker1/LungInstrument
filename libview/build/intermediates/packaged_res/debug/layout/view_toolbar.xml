<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/view_toolbar_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_toolbar_height"
            android:background="@color/color_toolbar"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/view_toolbar_lefttv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/view_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:padding="15dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />



            <LinearLayout
                android:id="@+id/ll_elab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/view_toolbar_title_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/elab_tab_bg"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="全息模式"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/view_toolbar_title_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/elab_tab_bg"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="实时模式"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <TextView
                android:id="@+id/view_toolbar_righttv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/view_toolbar_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/view_right_icon"
                android:layout_width="@dimen/space_28"
                android:layout_height="@dimen/space_28"
                android:layout_gravity="end|center_vertical"
                android:visibility="visible"
                android:layout_marginRight="@dimen/space_20"/>

        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>
</LinearLayout>